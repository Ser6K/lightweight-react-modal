{
    "compilerOptions": {
        "outDir": "./src",
        "baseUrl": ".",
        "noImplicitAny": true,
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "types": ["jest", "node"],
        "moduleResolution": "node",
        "paths": {
            "utils": ["src/utils/utils"],
            "register": ["src/utils/register"]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src", "./declarations.d.ts"
    ]
}
